
@{
    ViewBag.Title = "Shipment";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">

        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <br />
            <div id="ModelShipmentTitle"> </div>
            <div class="col-sm-12 col-md-12">
                <div class="col-sm-10 col-md-10">
                    <div class="col-sm-2 col-md-2">
                        <label>時間：</label>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <input type="datetime" id="startDate" name="startDate" class="input-sm" placeholder="起始日期" />
                    </div>
                    <div class="col-sm-2 col-md-2">
                        <label>TO </label>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <input type="datetime" id="endDate" name="endDate" class="input-sm" placeholder="結束日期" />
                    </div>
                </div>
                <div class="col-sm-2 col-md-2">
                    <input type="button" id="searchBtn" value="查詢" class="btn-sm btn-primary" />
                </div>
                <br />
                @if (Request.IsAuthenticated && User.IsInRole("A/S"))
                {
                    <div id="AandSShipmentDiv" class="show" style="float: left; width: 100%"></div>
                }
                else
                {
                    <div id="AandSShipmentDiv" class="hidden" style="float: left; width: 100%"></div>
                }
                @if (Request.IsAuthenticated && User.IsInRole("Excalibur"))
                {
                    <div id="ExcaliburShipmentDiv" class="show" style="float: left; width: 100%"></div>
                }
                else
                {
                    <div id="ExcaliburShipmentDiv" class="hidden" style="float: left; width: 100%"></div>
                }
                @if (Request.IsAuthenticated && User.IsInRole("Taurus"))
                {
                    <div id="TaurusShipmentDiv" class="show" style="float: left; width: 100%"></div>
                }
                else
                {
                    <div id="TaurusShipmentDiv" class="hidden" style="float: left; width: 100%;"></div>
                }
                @if (Request.IsAuthenticated && User.IsInRole("Austin"))
                {
                    <div id="AustinShipmentDiv" class="show" style="float: left; width: 100%"></div>
                }
                else
                {
                    <div id="AustinShipmentDiv" class="hidden" style="float: left; width: 100%;"></div>
                }
                @if (Request.IsAuthenticated && User.IsInRole("B9"))
                {
                    <div id="B9ShipmentDiv" class="show" style="float: left; width: 100%"></div>
                }
                else
                {
                    <div id="B9ShipmentDiv" class="hidden" style="float: left; width: 100%"></div>
                }
                @if (Request.IsAuthenticated && User.IsInRole("H/M"))
                {
                    <div id="HandMShipmentDiv" class="show" style="float: left; width: 100%"></div>
                }
                else
                {
                    <div id="HandMShipmentDiv" class="hidden" style="float: left; width: 100%"></div>
                }             
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/highCharts")
@Scripts.Render("~/bundles/CommonScript")
@Scripts.Render("~/bundles/ReportDataMethod")
@Scripts.Render("~/bundles/Shipment")