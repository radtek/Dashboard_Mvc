
@{
    ViewBag.Title = "LineOeeValue";
}

<div class="col-sm-12">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <br />
        <div id="monthlyLineStatusDiv">
            <div id="lineNametitleDiv"></div>
            <br />
            <div class="col-sm-12 col-sm-12">
                <div class="col-sm-10 col-sm-10">
                    <div class="col-sm-2 col-sm-2">
                        <label>時間：</label>
                    </div>
                    <div class="col-sm-4 col-sm-4">
                        <input type="datetime" id="oeeStartDate" name="startDate" class="input-sm" placeholder="起始日期" />
                    </div>
                    <div class="col-sm-2 col-sm-2">
                        <label>TO </label>
                    </div>
                    <div class="col-sm-4 col-sm-4">
                        <input type="datetime" id="oeeEndDate" name="endDate" class="input-sm" placeholder="結束日期" />
                    </div>
                </div>
                <div class="col-sm-2 col-sm-2">
                    <input type="button" id="oeeSearchBtn" value="查詢" class="btn-sm btn-primary" />
                </div>

            </div>
            <div id="monthlyLineStatusChart"></div>
            <div id="monthlyLineUPHChart"></div>
            <div id="tableTitle"></div>
            <table id="monthlyLineStatusTable" class="table table-bordered table-striped table-hover" cellspacing="0">
                <thead>
                    <tr>
                        <th>WORK_DATE</th>
                        <th>OEE_VALUE</th>
                        <th>UPH</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="col-sm-1"></div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/highCharts")
@Scripts.Render("~/bundles/CommonScript")
@Scripts.Render("~/bundles/LineOeeValue")

